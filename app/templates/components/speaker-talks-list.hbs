<div class="speaker-list-container">
	{{#each talks as |talk|}}
		<div class="talk-card mdl-card mdl-shadow--2dp" style="background: url('{{ talk.image }}');background-size: cover;">
			<div class="mdl-card__title mdl-card--expand">
				<h2 class="mdl-card__title-text"></h2>
			</div>
			<div class="mdl-card__supporting-text">
				{{ talk.name }}<br />
				{{ talk.date }}, {{ talk.conf }}<br />
				{{ talk.local }}<br />

				<div class="icon">
					{{#if talk.slides}}
						<a target="_blank" href="{{talk.slides}}">
							<img src="/img/slides-icon.png" alt="Slides">
						</a>
					{{/if}}

					{{#if talk.video}}
						<a target="_blank" href="{{talk.video}}">
							<img src="/img/video-icon.png" alt="Video">
						</a>
					{{/if}}
				</div>
			</div>
		</div>
	{{/each}}
</div>